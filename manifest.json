{
  "manifest_version": 3,
  "name": "GXCorner for All",
  "version": "2.0.4",
  "description": "Allows all browsers to open GX Corner",
  "content_scripts": [
    {
      "matches": [
        "https://gxcorner.games/*",
        "https://*.gxcorner.games/*"
      ],
      "world": "MAIN",
      "run_at": "document_start",
      "js": [
        "palettes.js",
        "dictionary.js",
        "v6-styles.js",
        "opr.js",
        "chrome.js",
        "content.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "gx-corner-for-all@ufukbakan"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "GXCorner for All",
    "default_popup": "popup/index.html"
  }
}