{
  "manifest_version": 3,
  "name": "GXCorner for All",
  "version": "1.2.0",
  "description": "Allows all browsers to open GXCorner",
  "short_description ": "Access GXCorner without Opera",
  "content_scripts": [
    {
      "matches": ["https://gxcorner.games/*"],
      "world": "MAIN",
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "gx-corner-for-all@ufukbakan"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
  